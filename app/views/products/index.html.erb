
<h1>Products</h1>

<%= link_to 'create', new_product_path %>

<ul>
  <% @products.each do |product| %>
    <li><%= link_to product.name, product_path(product)  %></li>
    <li><%= product.description %></li>
    <li><%= product.price%></li>
    <li><%= product.quantity%></li>
    <li><%= product.category.name%></li>

  <% end %>
</ul>

