<div class="flex justify-center">
  <div class="flex justify-center bg-white shadow-md rounded px-8 pt-6 pb-8 m-8 w-full max-w-lg">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email Field -->
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 text-sm font-bold " %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-4 text-sm text-gray-600">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <!-- Password Field -->
      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 text-sm font-bold " %> <i class="text-gray-500">(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "New password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-500"><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <!-- Password Confirmation Field -->
      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold " %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <!-- Current Password Field -->
      <div class="mb-4">
        <%= f.label :current_password, class: "block text-gray-700 text-sm font-bold " %> <i class="text-gray-500">(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Current password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <!-- Submit Button -->
      <div class="flex items-center justify-between ">
        <%= f.submit "Update", class: "bg-gray-400 hover:bg-slate-950 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline" %>
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "bg-red-800 hover:bg-red-600 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline" %>
        <%= link_to "Back", :back, class: " text-black font-bold py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline" %>

     
      </div>

    <% end %>

  
  </div>
</div>
